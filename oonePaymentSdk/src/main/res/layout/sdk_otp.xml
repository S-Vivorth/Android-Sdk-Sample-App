<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sdk="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#121212"
        android:visibility="gone"
        android:id="@+id/otpProgressBar"
        />

    <RelativeLayout
        android:id="@+id/otp_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/otp_indicator"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#40000000" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/otp_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otpverification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="OTP Verification"
            android:textColor="#121212"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView

                android:id="@+id/otpbankimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/acleda" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/otpbankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="ACLEDA"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/otpAccNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.2"
            android:text="*******1314"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/enterOtpText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="Enter the OTP sent to your phone number"
            android:textColor="#333333"

            />

        <EditText
            android:id="@+id/otpEditText"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/otp_edittext"
            android:focusedByDefault="true"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAlignment="center"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dontreceive"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Dont' receive the OTP?"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/resendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:text="Resend"
                android:textColor="#333333"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"

        android:layout_height="wrap_content">
        <com.marozzi.roundbutton.RoundButton
            android:gravity="center"
            android:id="@+id/verify_btn"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>