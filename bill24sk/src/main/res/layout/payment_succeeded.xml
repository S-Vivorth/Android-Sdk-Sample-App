<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/tick"
            android:backgroundTint="#4FB329" />

        <TextView
            android:textColor="#121212"
            android:textStyle="bold"
            android:id="@+id/pmsucceededLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Payment Succeeded"
            android:textSize="20dp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:textColor="#121212"

                android:id="@+id/orderIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id" />

            <TextView
                android:textColor="#121212"

                android:id="@+id/orderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Label" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:textColor="#121212"

                android:id="@+id/pmLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment method" />

            <TextView
                android:textColor="#121212"

                android:id="@+id/pmMethodValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Label" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:textColor="#121212"

                android:id="@+id/bankRefLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank ref." />

            <TextView
                android:textColor="#121212"

                android:id="@+id/bankRefvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="label" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:textColor="#121212"

                android:id="@+id/totalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total" />

            <TextView
                android:textColor="#121212"

                android:id="@+id/totalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Label" />
        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#04B0E3"
            android:id="@+id/continueShoppingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="Continue Shopping" />
    </LinearLayout>


</RelativeLayout>